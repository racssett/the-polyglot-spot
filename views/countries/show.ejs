<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/countries/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= country.country %></h1>
  <section>
    <div>Official Languages:</div>
    <div><%= country.nativeLanguages %></div>
  </section>
  <section>
    <% if (country.owner.equals(user?.profile._id)) { %>
      <a href="/countries/<%= country._id %>/edit">
        <button class="btn" type="submit">Edit Country</button>
      </a>
    <% } %>
  </section>
</main>

<%- include('../partials/footer') %>