<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/languages/index.css" />
<%- include('../partials/nav') %>

<section class="languages">
  <div class="languages-container">
    <h1 class="title">Edit <%= language.language %></h1>
    <form action="/languages/<%= language._id %>?_method=PUT" method="POST">
      <label>
        Language: 
        <input 
          type="text"
          name="language" 
          value="<%= language.language %>" 
          autocomplete="off"
          required
        >
      </label>
      <label>
        Difficulty: 
        <input 
          type="text"
          name="difficulty" 
          value="<%= language.difficulty %>" 
          autocomplete="off"
          required
        >
      </label>
      <label>
        Sentence Structure: 
        <input 
          type="text"
          name="structure" 
          value="<%= language.structure %>" 
          autocomplete="off"
          required
        >
      </label>
      <label>
        Conjugations?
        <input 
          type="checkbox" 
          name="conjugation" 
          <%= language.conjugation ? "checked" : "" %> 
        >
      </label>
      <div class="submit-button">
        <button type="submit">Edit <%= language.language %></button>
      </div>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>